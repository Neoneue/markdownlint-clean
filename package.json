{
  "name": "markdown-toolkit",
  "version": "1.0.0",
  "description": "Portable markdown linting setup for JavaScript/TypeScript projects - achieve 100% markdown compliance",
  "main": "setup.sh",
  "scripts": {
    "setup": "./setup.sh",
    "fix": "./fix-markdown.sh",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore .next",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore .next --fix",
    "format": "prettier --write '**/*.md'",
    "prepare": "husky install"
  },
  "keywords": [
    "markdown",
    "linting",
    "markdownlint",
    "documentation",
    "lint-staged",
    "husky",
    "pre-commit",
    "code-quality",
    "developer-tools",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/markdown-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/markdown-toolkit/issues"
  },
  "homepage": "https://github.com/yourusername/markdown-toolkit#readme",
  "devDependencies": {
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.5.0",
    "husky": "^9.1.2",
    "lint-staged": "^15.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}